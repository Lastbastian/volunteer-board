<div class="container">
  <h3>Edit this Event</h3>

  <form action="/event/<%= @event.id %>" method="post">

    <label for="title">Title:</label>
    <input type="text" name="event[title]" value="<%= @event.title %>" />
    <br>

    <label for="description">Description:</label>
    <input type="text" name="event[description]" value="<%= @event.description %>" />
    <br>

    <label for="date">Date of Event:</label>
    <input type="text" name="event[date_of_event]" value="<%= @event.date_of_event %>" />
    <br>

    <label for="time">Time of Event:</label>
    <input type="text" name="event[time_of_event]" value="<%= @event.time_of_event %>" />
    <br>

    <label for="time">Address:</label>
    <input type="address" name="event[address]" value="<%= @event.address %>" />
    <br>

    <label for="time">City:</label>
    <input type="city" name="event[city]" value="<%= @event.city %>" />
    <br>

    <label for="time">State:</label>
    <input type="state" name="event[state]" value="<%= @event.state %>" />
    <br>

    <label for="length">Length of Event:</label>
    <input type="text" name="event[length_of_event]" value="<%= @event.length_of_event %>" />
    <br>

    <label for="threshold">Participants Threshold:</label>
    <input type="text" name="event[participants_thresh]" value="<%= @event.participants_thresh %>" />
    <br>

    <label for="tags">Tags:</label>
    <input type="text" name="event[tags]" value="<%= @event.tags %>" />
    <br>

    <input type = "submit" value="Update event">

  </form>
</div>